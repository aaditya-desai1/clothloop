{
  "version": 2,
  "name": "clothloop-frontend",
  "builds": [
    { "src": "frontend/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/", "dest": "/home.html" },
    { "src": "/home", "dest": "/home.html" },
    { "src": "/(.*).html", "dest": "/$1.html" },
    { "src": "/frontend/(.*)", "dest": "/frontend/$1" },
    { "src": "/(.*)", "dest": "/$1" }
  ],
  "github": {
    "silent": true
  }
} 